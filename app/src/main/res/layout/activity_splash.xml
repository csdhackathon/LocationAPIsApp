<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/blue_magenta_gradient_left_to_right"
    tools:context=".activity.SplashScreenActivity">

    <TextView
        android:id="@+id/textView_screen_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:textColor="@color/pb_gray_50_white"
        android:textSize="25sp"
        android:fontFamily="@font/precision_sans_w_rg"
        android:text="@string/screen_title" />
    <ImageView
        android:id="@+id/image_view_header_icon"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:scaleType="fitCenter"
        android:layout_below="@id/textView_screen_title"
        android:layout_centerInParent="true"
        android:src="@drawable/int_pb_hor_rgb_grd_rev"
        tools:ignore="ContentDescription" />

</RelativeLayout>