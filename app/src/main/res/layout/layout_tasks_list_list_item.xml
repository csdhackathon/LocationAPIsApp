<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/liner_lay_product_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:elevation="2dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:background="@drawable/edit_text_white_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear_layout_task_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3.2"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <RelativeLayout
                    android:id="@+id/relative_lay_route_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:id="@+id/imageView_route_order"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/circle_background_black"
                        tools:ignore="ContentDescription" />
                    <TextView
                        android:id="@+id/textView_route_order"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="2"
                        android:textSize="15sp"
                        android:textColor="@color/pb_gray_50_white"
                        />
                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/linear_lay_name_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginStart="8dp"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textView_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/pb_gray_700_black"
                        android:textSize="20sp"
                        android:text="Pawan Kumar"
                        android:gravity="center"
                        android:fontFamily="@font/precision_sans_w_rg"  />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView_address_level"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pb_gray_700_black"
                    android:textSize="16sp"
                    android:fontFamily="@font/precision_sans_w_rg"
                    android:text="@string/address" />
                <TextView
                    android:id="@+id/textView_address_colon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pb_gray_700_black"
                    android:textSize="16sp"
                    android:layout_marginStart="2dp"
                    android:fontFamily="@font/precision_sans_w_rg"
                    android:text="@string/colon" />
                <TextView
                    android:id="@+id/textView_address_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/pb_gray_700_black"
                    android:textSize="16sp"
                    android:layout_marginStart="5dp"
                    android:text="170 W 23 At 7 Ave, New Your, NY"
                    android:fontFamily="@font/precision_sans_w_lt"  />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>